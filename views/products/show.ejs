<div>
  This is the item detail page
  <section id="show-page">
    <div id="productinfo"><%= product.name%></div>
    <div id="productinfo"><%= product.description %></div>
    <div id="productinfo"><%= product.price %></div>
    <form id="add-product-to-cart" action='/cart' method="POST">
        <div id="productinfo"><input type="number" name="quantity"></div>
